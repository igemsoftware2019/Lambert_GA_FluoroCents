<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ResultsActivity" >

        <TextView
            android:id="@+id/space2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="  "
            android:gravity="center"
            android:textSize="20pt"
            />

        <TextView
            android:id="@+id/resultstitle"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/space2"
            android:text="Results"
            android:gravity="center"
            android:textSize="15pt"
            />

        <TextView
            android:id="@+id/anotherspace"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/resultstitle"
            android:text="  "
            android:gravity="center"
            android:textSize="18pt"
            />

        <TextView
            android:id="@+id/meanvalue"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/anotherspace"
            android:text="Mean: 35.6 lux"
            android:gravity="center"
            android:textSize="11pt"
            />

        <TextView
            android:id="@+id/space"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/meanvalue"
            android:text=" "
            android:gravity="center"
            android:textSize="18pt"
            />

        <TextView
            android:id="@+id/variancevalue"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/space"
            android:text="Variance: 8.4 lux"
            android:gravity="center"
            android:textSize="11pt"
            />

        <TextView
            android:id="@+id/onemorespace"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/variancevalue"
            android:text=" "
            android:gravity="center"
            android:textSize="18pt"
            />

        <TextView
            android:id="@+id/countvalue"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/onemorespace"
            android:text="Count: 85.0 values"
            android:gravity="center"
            android:textSize="11pt"
            />

        <TextView
            android:id="@+id/anothaone"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/countvalue"
            android:text=" "
            android:gravity="center"
            android:textSize="18pt"
            />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anothaone"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="#204F6D"
            android:text="SAVE RESULTS"
            android:onClick="moveToSave"
            android:textColor="#FFFFFF"
            android:textSize="7pt" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>