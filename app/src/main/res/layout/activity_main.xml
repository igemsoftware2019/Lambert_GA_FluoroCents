<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <TextView
            android:id="@+id/topgap"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="30pt" />

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="500px"
            android:layout_height="400px"
            android:layout_below="@+id/topgap"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/fclogo" />

        <TextView
            android:id="@+id/topTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/topImage"
            android:text="FluoroÂ¢ents"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/space1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/topTitle"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="3pt" />

        <TextView
            android:id="@+id/creditTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/space1"
            android:textStyle="bold"
            android:text="By Lambert iGEM"
            android:layout_centerInParent="true"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/space2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/creditTitle"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="15pt" />

        <Button
            android:id="@+id/StartBtn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space2"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="#204F6D"
            android:text="START"
            android:onClick="moveToCapture"
            android:textColor="#FFFFFF"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/space3"
            android:layout_height="wrap_content"
            android:layout_width="272dp"
            android:layout_below="@+id/StartBtn"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="5pt" />

        <Button
            android:id="@+id/InstructionsBtn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space3"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="#204F6D"
            android:text="INSTRUCTIONS"
            android:onClick="moveToInstructions"
            android:textColor="#FFFFFF"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/space4"
            android:layout_height="wrap_content"
            android:layout_width="272dp"
            android:layout_below="@+id/InstructionsBtn"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="5pt" />

        <Button
            android:id="@+id/CreditsBtn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space4"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="#204F6D"
            android:text="MAP"
            android:onClick="moveToCredits"
            android:textColor="#FFFFFF"
            android:textSize="7pt" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>